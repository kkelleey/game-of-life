{{#each board as |row|}}
  <div class='row'>
    {{#each row as |cell|}}
      <div class='cell {{if cell.alive 'alive'}}' {{action 'toggleActive' cell}}></div>
    {{/each}}
  </div>
{{/each}}

<button {{action 'step'}} class="btn btn-primary" data-role='step-action'>Step</button>

<button {{action 'togglePlay'}} class="btn btn-primary" data-role='play-action'>
  {{#if playing}}
    pause
  {{else}}
    play
  {{/if}}
</button>
